<h1>新規投稿</h1>
<div class="post-new">
  <%= form_tag("/posts/create") do %>
  <% @post.errors.full_messages.each do |message| %>
    <div class="alert alert-warning no-text-shadow" role="alert">
      <%= message %>
    </div>
  <% end %>
    <div class="form-floating mb-3 post-new__form">
      <textarea name="content" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 200px"></textarea>
      <label for="floatingTextarea2">いまどうしてる？</label>
    </div>
    <button type="submit" class="btn btn-info btn-lg">投稿する</button>
  <% end %>
</div>